mixin m-head
  //- Favs
  - var png = "(href)"
  - var svg = "(href)"
  - var ios_png = "(href)"
  //- Texts
  - var author = '(site link)'
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Садовый центр
    meta(name='author' content= '#{author}')
    link(rel='icon' href='#{png}' type="image/png")
    link(rel='icon' href='#{svg}' type='image/svg+xml')
    link(rel='apple-touch-icon' href='#{ios_png}')
    link(rel='icon' href='/assets/images/favicon.ico' type="image/x-icon")
    script(src="https://api-maps.yandex.ru/v3/?apikey=d8c20868-b02c-4e1b-94b9-04254d4f22bf&lang=ru_RU")