mixin productCard(img, alt, name, price, link)
    .product-card
        .product-card__photo
            img(src=img, alt=alt)
        .product-card__content
            .product-card__title=name
            .product-card__footer
                .product-card__price=(price)
                a(href=link).product-card__link.btn.btn--dark-green
                    svg(width="24" height="24")
                        use(href="../assets/icons/sprite.svg#link-arrow")