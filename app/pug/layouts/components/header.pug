mixin header 
    .header
        .container
            .header__container
                .header__up
                    .header__logo 
                        svg(width="288" height="60")
                            use( href="../assets/icons/sprite.svg#logo")
                    .header__up-right
                        .socials
                            a(href='##').social
                                .social__icon
                                    svg(width='24' height='24' fill="#ffffff") 
                                        use( href="../assets/icons/sprite.svg#inst")
                            a(href='##').social
                                .social__icon
                                    svg(width='24' height='24' fill="#ffffff") 
                                        use( href="../assets/icons/sprite.svg#tg")
                            a(href='##').social
                                .social__icon
                                    svg(width='24' height='24' fill="#ffffff") 
                                        use( href="../assets/icons/sprite.svg#vk")
                            .social.social--phone
                                .social__icon
                                    svg(width='24' height='24' fill="#ffffff") 
                                        use( href="../assets/icons/sprite.svg#phone")
                                .custom-tooltip.custom-tooltip--dom.custom-tooltip--arrow
                                    a.custom-tooltip__text(href='##') +7 (999) 999 99 99
                                    .custom-tooltip__arrow
                                        svg(width='24' height='24') 
                                            use(href="../assets/icons/sprite.svg#selectArrow")
                                    .custom-tooltip__container
                                        .custom-tooltip__items
                                            a(href='##').custom-tooltip__item +7 (999) 999 99 91
                                            a(href='##').custom-tooltip__item +7 (999) 999 99 92
                .header__bottom.menu
                    .header__bottom-left
                        .header__category.btn-toggle(id="menu-catalog")
                            button.btn-toggle__button
                                svg(width='24' height='24' fill='#5E8A3B') 
                                    use( href="../assets/icons/sprite.svg#burger") 
                                | Каталог
                            .btn-toggle__catalog
                        a(href='##').header__category
                            svg(width='24' height='24' fill='#5E8A3B') 
                                use( href="../assets/icons/sprite.svg#stocks") 
                            | Акции
                        a(href='##').header__category
                            svg(width='24' height='24' fill='#5E8A3B') 
                                use( href="../assets/icons/sprite.svg#compilation") 
                            | Подборки
                        a(href='##').header__category
                            svg(width='24' height='24' fill='#5E8A3B') 
                                use( href="../assets/icons/sprite.svg#clubCard") 
                            | Клубные карты
                    .header__line
                    .header__bottom-right#jsItemMoreContainer
                        a(href='##').header__page.item-more Услуги
                        a(href='##').header__page.item-more Фотостудия
                        a(href='##').header__page.item-more Блог
                        a(href='##').header__page.item-more Подарочные карты
                        a(href='##').header__page.item-more О нас
                        .header__page.custom-tooltip.custom-tooltip--arrow#jsItemsMore
                            .custom-tooltip__text Еще
                            .custom-tooltip__arrow
                                svg(width='24' height='24') 
                                    use(href="../assets/icons/sprite.svg#selectArrow")
                            .custom-tooltip__container
                                .custom-tooltip__items#jsItemsContainer
                                    a(href='##').custom-tooltip__item Контакты
                                    a(href='##').custom-tooltip__item Вакансии
                                    a(href='##').custom-tooltip__item Доставка и оплата


