    +m-head
    body
        +header
        .app__content
            section.contacts
                .contacts__breadcrumbs.breadcrumbs.breadcrumbs-case
                    .swiper
                        .swiper-wrapper
                            .swiper-slide 
                                .breadcrumbs__page 
                                    .breadcrumbs__text Главная
                                    svg(width="24" height="24")
                                        use(href="../assets/icons/sprite.svg#selectArrow")
                            .swiper-slide
                                .breadcrumbs__page.breadcrumbs--current
                                    .breadcrumbs__text Контакты
                .container
                    .section-header
                        .section-header__first-row
                            h2 Контакты 
                    .contacts__content
                        .contacts__info
                            .annotation
                                //- спросить у кости
                                .annotation-header
                                    .annotation-header__icon 
                                        svg(height="24" width="24" fill="#8EAD75")
                                            use(href="../assets/icons/sprite.svg#navigator")
