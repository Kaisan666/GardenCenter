                                        li Автобус №: 14, 163а, 32, 4, 52,
                                        li Маршрутное такси №: 130а, 183а, 29, 40, 414, 85,
                                        li Троллейбус №: 1, 14, 6, 9.
                            .annotation
                                .annotation-header 
                                    .annotation-header__icon 
                                        svg(height="24" width="24" fill="#8EAD75")
                                            use(href="../assets/icons/sprite.svg#clock")
                                    //- .annotation-header__text Время работы
                                    h3 Время работы
                                .annotation-main 
                                    p с 8:30 до 20:00, без перерыва и выходных
                            .annotation
                                .annotation-header 
                                    .annotation-header__icon
                                        svg(height="24" width="24" fill="#8EAD75")
                                            use(href="../assets/icons/sprite.svg#phone")
                                    //- .annotation-header__text Телефон
                                    h3 Телефон
                                .annotation-phones
                                    p +7(861)22-00-780,
                                    p +7(861)22-00-781,
                                    p +7(861)22-00-783.
                                    p +7(861)22-00-785 (факс).
                            .annotation
                                .annotation-header 
                                    .annotation-header__icon 
                                        svg(height="24" width="24" fill="#8EAD75")
                                            use(href="../assets/icons/sprite.svg#mail")
